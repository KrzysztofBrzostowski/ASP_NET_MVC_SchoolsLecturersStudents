@model SchoolsLecturersStudents.Models.Student

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.School.SchoolName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.School.SchoolName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dd>
            <table class="table">
                <tr>
                    <th>Lecturer FirstName</th>
                    <th>Lecturer LastName</th>

                </tr>
                @foreach (var item in Model.Enrollments)
                {
                    <tr>
                        <td>

                            @Html.DisplayFor(modelItem => item.Lecturer.FirstName)

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Lecturer.LastName)
                        </td>
                    </tr>
                }
            </table>
        </dd>



    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
